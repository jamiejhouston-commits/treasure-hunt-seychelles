# Frontend Environment Configuration
# Copy this to .env.local and update with your actual values

# API Configuration
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_WS_URL=ws://localhost:3001

# XRPL Configuration
REACT_APP_XRPL_SERVER=wss://s.altnet.rippletest.net:51233
# For mainnet, use: wss://s1.ripple.com
REACT_APP_NETWORK_ID=1

# XUMM Configuration
REACT_APP_XUMM_API_KEY=your-xumm-api-key-here
REACT_APP_XUMM_API_SECRET=your-xumm-api-secret-here

# Application Configuration
REACT_APP_NAME="Treasure of Seychelles"
REACT_APP_DESCRIPTION="Interactive NFT collection featuring 1000 cryptographic clues leading to Olivier Levasseur's lost pirate treasure"

# Feature Flags
REACT_APP_ENABLE_DEVTOOLS=true
REACT_APP_ENABLE_ANALYTICS=false

# Collection Configuration
REACT_APP_COLLECTION_SIZE=1000
REACT_APP_TREASURE_NFT_ID=treasure-nft-001

# Social Media & Links
REACT_APP_TWITTER_URL=https://twitter.com/treasureseychelles
REACT_APP_DISCORD_URL=https://discord.gg/treasureseychelles
REACT_APP_GITHUB_URL=https://github.com/treasure-seychelles

# Deployment Configuration
REACT_APP_VERSION=1.0.0
REACT_APP_BUILD_NUMBER=1
REACT_APP_ENVIRONMENT=development